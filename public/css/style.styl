body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

.container
  min-height: 400px

.chatboard
  min-height: 400px

.chat-messages
  border: solid 2px $chat_view_shadow
  height 400px
  overflow-y scroll
/*  box-shadow: 0 0 5px rgba(0, 0, 0, 0.6) inset  */

.chatbox
  height: 100px
  width 100%

.chatbox > *
  min-height 100%

.chatbox > textarea
  width 84.5%

.chatbox > button
  width 14.5%

.chat-message
  width 100%
  border : 3px solid
  border-radius : 3px
  box-shadow 2px 2px 4px $chat_view_shadow

.chat-message.client
  border-color : $client_chat_border
  text-align left

.chat-message.server
  border-color : $server_chat_border
  text-align right
